    <header>
        <nav class="navbar navbar-light bg-dark min-vw-100">
            <h1 class="p-3 text-white">
                Welcome, <%= username %>
            </h1>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" data-bs-toggle="modal" data-bs-target="#modal">
                        <i class="bi bi-cart mx-5" id="carritoContenedor">0</i>
                        <button class="btn btn-warning float-right mt-2" onclick="location.href='/logout'">
                            Desloguear
                        </button>
                    </a>
                </li>
            </ul>
        </nav>

    </header>
    <main>
        <div class="row mt-5" id="contenedor"></div>
    </main>
    <!-- </div> -->
    <div class="container-xl">
        <div class="modal" tabindex="-1" role="dialog" id="modal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Carrito</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" id="vaciarCarrito">
                            Vaciar carrito
                        </button>
                        <button type="button" id="procesarCompra" class="btn btn-primary">
                            Continuar compra
                        </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            Cerrar
                        </button>

                        <span>Precio total:</span>
                        <p class="text-center" id="precioTotal"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-3">
        <div class="jumbotron">
            <%- include('../public/index.html') %>
                <h2>Vista de productos</h2>
                <br>

                <% if(hayProducts) { %>
                    <div class="card mt-3" style="width: 18rem;">
                        <table class="table table-dark">
                            <% productos.forEach((producto)=> { %>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= producto.title %>
                                    </h5>
                                    <p class="card-text">Precio:
                                        <%= producto.price %> uds
                                    </p>
                                    <p class="card-text">Stock:
                                        <%= producto.stock %> unidades
                                    </p> 
                                                                       
                                    <img class="card-img-top mt-2" src=<%=producto.thumbnail %> alt="not found">
                                </div>
                                <% }) %>
                        </table>
                    </div>

                    <!-- <div class="table-responsive">
                        <table class="table table-dark">
                            <tr>
                                <th>Nombre</th>
                                <th>Precio</th>
                                <th>Foto</th>
                            </tr>
                            <% productos.forEach((producto)=> { %>
                                <tr>
                                    <td>
                                        <%= producto.title %>
                                    </td>
                                    <td>
                                        <%= producto.price %>
                                    </td>
                                    <td><img width="50" src=<%=producto.thumbnail %> alt="not found"></td>
                                </tr>
                                <% }) %>
                        </table>
                    </div> -->
                    <% } else{ %>
                        <h3 class="alert alert-warning">No existen datos</h3>
                        <% } %>
        </div>
    </div>

    <script src="../public/js/main.js"></script>
    <script src="../public/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>

